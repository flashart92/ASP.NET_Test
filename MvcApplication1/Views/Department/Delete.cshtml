@model MvcApplication1.Models.Department

@{
    ViewBag.Title = "Удалить?";
    Layout = "~/Views/Shared/_LayoutCreate.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Floor, "Этаж", new { @class = "control-label col-sm-2" })
                <div class="col-sm-7">
                    @Html.TextBoxFor(model => model.Floor, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Name, "Название отдела", new { @class = "control-label col-sm-2" })
                <div class="col-sm-7">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <input type="submit" value="Удалить" class="btn btn-danger" />
            @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
}
