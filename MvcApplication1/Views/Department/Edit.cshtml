@model MvcApplication1.Models.Department

@{
    ViewBag.Title = "Изменить";
    Layout = "~/Views/Shared/_LayoutCreate.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Floor, "Этаж", new { @class = "control-label col-sm-2" })
                <div class="col-sm-7">
                    @Html.TextBoxFor(model => model.Floor, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Floor)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Name, "Название отдела", new { @class = "control-label col-sm-2" })
                <div class="col-sm-7">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <input type="submit" value="Изменить" class="btn btn-primary" />
            @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
}
